{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block modal %}
    <div id="modal">
        <div class="modal-underlay"></div>
        <div class="modal-content">
            <div class="row">
                {{ form_start(registrationForm, {
                    'attr': {
                        'hx-post': path('app_register'),
                        'hx-target': '#modal-div',
                        'hx-select': '#modal',
                        'hx-boost': 'true',
                    }
                }) }}

                <div class="md:flex md:items-center mb-6">
                    {{ form_errors(registrationForm) }}
                </div>

                <div class="md:flex md:items-center mb-6">
                    {{ form_widget(registrationForm._token) }}
                    <div class="md:w-1/3">
                        <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-full-name">
                            {{ field_label(registrationForm.email) }}
                        </label>
                    </div>
                    <div class="md:w-2/3">
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>
                </div>
                <div class="md:flex md:items-center mb-6">
                    <div class="md:w-1/3">

                        <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-full-name">
                            {{ field_label(registrationForm.plainPassword) }}
                        </label>
                    </div>
                    <div class="md:w-2/3">
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500'}}) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                </div>
                <div class="md:flex md:items-center">
                    <div class="md:w-1/3"></div>
                    <div class="md:w-2/3">
                        <button type="submit" class="btn">
                            Register
                        </button>
                    </div>
                </div>
                {{ form_end(registrationForm) }}

                <div>
                    <button onclick="htmx.remove(htmx.find('#modal'));" class="btn--secondary">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
